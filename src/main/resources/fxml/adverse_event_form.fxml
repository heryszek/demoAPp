<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.qmapp.demo.controller.AdverseEventFormController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <DatePicker fx:id="datePicker" promptText="Date"/>
    <TextArea fx:id="descriptionField" promptText="Description"/>
    <TextField fx:id="reportedByField" promptText="Reported By"/>
    <TextField fx:id="riskField" promptText="Risk"/>
    <Button text="Save" onAction="#handleSave"/>
    <Button text="Cancel" onAction="#handleCancel"/>
</VBox>


